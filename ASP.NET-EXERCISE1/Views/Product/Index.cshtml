@model IEnumerable<Product>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASP.NET_EXERCISE1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/ProductIndexStyleSheet.css" />
</head>
<body class="content-table thead-tr">

    <h2>Products</h2>

    <br />
    <div style="display: block">
        <a href="/Product/InsertProduct/">Create a New Product</a>
    </div>
    <br />

    <h1></h1>
    <table class= "table">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Category ID</th>
            <th>On Sale</th>
            <th>Stock Level</th>
        </tr>

        @foreach (var product in Model)
        {
            <tr>
                <td><a href=/Product/ViewProduct/@product.ProductID>@product.ProductID</a></td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.CategoryID</td>
                <td>@product.OnSale</td>
                <td>@product.StockLevel</td>
            </tr>

        }
    </table>
</body>
</html>


